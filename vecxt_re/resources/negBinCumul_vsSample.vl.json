{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Negative Binomial CDF with samples overlaid",
  "width": "container",
  "height": "container",
  "title": "Negative Binomial CDF with Sample Points",
  "layer": [
    {
      "data": {
        "values": [
          {"value": 0, "prob": 0.0},
          {"value": 1, "prob": 0.1},
          {"value": 2, "prob": 0.18},
          {"value": 3, "prob": 0.30},
          {"value": 4, "prob": 0.45}
