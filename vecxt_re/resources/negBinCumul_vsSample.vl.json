    },

    {
      "data": {
        "values": [
          {"value": 1, "prob": 0.125},
          {"value": 2.0, "prob": 0.35},
          {"value": 3, "prob": 0.55},
          {"value": 4, "prob": 0.85}
        ]
      },
      "mark": {
        "type": "point",
        "shape": "cross",
        "color": "red",
        "size": 100,
        "strokeWidth": 2
      },
      "encoding": {
        "x": {"field": "value", "type": "quantitative", "title": "k"},
        "y": {"field": "prob", "type": "quantitative", "title": "CDF"}
      }
    }
  ]
}
